<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="text-center mt-5">
                        <i class="bi bi-shield-lock text-warning" style="font-size: 3rem;"></i>
                        <h3 class="mt-3">Access Denied</h3>
                        <p class="text-muted">You've reached a locked door! Please log in to see this content.</p>
                        <a href="/login" class="btn btn-primary mt-2">Sign In Now</a>
                    </div>
                </NotAuthorized>
                <Authorizing>
                    <p>Checking security clearance...</p>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>