@page "/profile"
@using RateMyProduction.Frontend.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json

@attribute [Authorize]
@inject ILocalStorageService Storage
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>My Profile | Rate My Production</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="card-header bg-primary py-4"></div>
                <div class="card-body text-center pt-0" style="margin-top: -40px;">
                    <div class="mb-3">
                        <div class="rounded-circle bg-white shadow-sm d-inline-block p-1">
                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <i class="bi bi-person-fill text-secondary fs-1"></i>
                            </div>
                        </div>
                    </div>

                    <h4 class="fw-bold mb-1">@currentUsername</h4>
                    <p class="text-muted small mb-3">Verified Industry Professional</p>

                    <div class="row g-0 border-top border-bottom py-3 mb-4">
                        <div class="col-6 border-end">
                            <div class="h5 fw-bold mb-0">@userReviews.Count</div>
                            <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Reviews</small>
                        </div>
                        <div class="col-6">
                            <div class="h5 fw-bold mb-0">45</div>
                            <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Upvotes</small>
                        </div>
                    </div>

                    <div class="text-start">
                        <label class="fw-bold small text-uppercase mb-2 text-muted">Identity Shield</label>
                        <select class="form-select form-select-sm mb-4">
                            <option>Technical Crew</option>
                            <option>Art & Creative</option>
                            <option>Logistics & Transport</option>
                        </select>

                        <button class="btn btn-outline-danger btn-sm w-100" @onclick="Logout">
                            <i class="bi bi-box-arrow-right"></i> Log Out
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0">My Review History</h3>
                <span class="text-muted small">Total: @userReviews.Count reports</span>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="list-group list-group-flush">
                    @if (userReviews.Count == 0)
                    {
                        <div class="p-4 text-center text-muted">No reviews found.</div>
                    }
                    @foreach (var myReview in userReviews)
                    {
                        <div class="list-group-item p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="fw-bold mb-0 text-primary">@myReview.Production</h6>
                                    <small class="text-muted">@myReview.Date</small>
                                </div>
                                <div class="text-warning small">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <i class="bi @(i < myReview.Rating ? "bi-star-fill" : "bi-star")"></i>
                                    }
                                </div>
                            </div>
                            <p class="text-dark mb-3">"@myReview.Snippet"</p>
                            <div class="d-flex gap-3">
                                <button class="btn btn-link btn-sm p-0 text-decoration-none"><i class="bi bi-pencil"></i> Edit</button>
                                <button class="btn btn-link btn-sm p-0 text-decoration-none text-danger"><i class="bi bi-trash"></i> Delete</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string currentUsername = "Loading...";
    private List<UserReview> userReviews = new();

    protected override async Task OnInitializedAsync()
    {
        var savedUsername = await Storage.GetItemAsync<string>("username");
        currentUsername = !string.IsNullOrEmpty(savedUsername) ? savedUsername : "Anonymous Crew";

        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var results = await Http.GetFromJsonAsync<List<ReviewApiResponse>>("api/reviews/my-reviews");

            if (results != null)
            {
                userReviews = results.Select(r => new UserReview
                {
                    Production = r.ProductionTitle,
                    Rating = r.RatingOverall,
                    Date = r.DatePosted.ToString("MMM yyyy"),
                    Snippet = r.ReviewText
                }).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching reviews: {ex.Message}");
        }
    }

    private async Task Logout()
    {
        await Storage.RemoveItemAsync("accessToken");
        await Storage.RemoveItemAsync("refreshToken");
        await Storage.RemoveItemAsync("username");
        Nav.NavigateTo("/login", true);
    }

    public class ReviewApiResponse
    {
        public string ProductionTitle { get; set; } = "";
        public int RatingOverall { get; set; }
        public string ReviewText { get; set; } = "";
        public DateTime DatePosted { get; set; }
    }

    public class UserReview
    {
        public string Production { get; set; } = "";
        public int Rating { get; set; }
        public string Date { get; set; } = "";
        public string Snippet { get; set; } = "";
    }
}