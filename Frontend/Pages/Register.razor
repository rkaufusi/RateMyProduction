@page "/register"
@using RateMyProduction.Frontend.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject NavigationManager Nav
@inject ILocalStorageService Storage
@inject AuthenticationStateProvider AuthProvider

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-2">Join the Crew</h2>
                    <p class="text-center text-muted mb-4">Start sharing your set experiences.</p>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <InputText @bind-Value="registerModel.Username" class="form-control" placeholder="jdoe_camera" />
                            <ValidationMessage For="@(() => registerModel.Username)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <InputText @bind-Value="registerModel.Email" class="form-control" placeholder="name@example.com" />
                            <ValidationMessage For="@(() => registerModel.Email)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <InputText @bind-Value="registerModel.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => registerModel.Password)" class="text-danger small" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Confirm Password</label>
                            <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" />
                            <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="text-danger small" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3 py-2 fw-bold" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Create Account
                        </button>
                    </EditForm>

                    <div class="text-center my-3 text-muted">
                        <small>OR</small>
                    </div>

                    @* Google OAuth - Pointing to your existing API logic *@
                    <a href="https://localhost:7066/api/auth/google" class="btn btn-outline-dark w-100 py-2">
                        <i class="bi bi-google me-2"></i> Continue with Google
                    </a>

                    <div class="text-center mt-4">
                        <span class="text-muted small">Already have an account? </span>
                        <a href="/login" class="small fw-bold text-decoration-none">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerModel = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    private async Task HandleRegister()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/register", registerModel);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<TokenResponse>();

                if (result != null)
                {
                    // Match your login logic for storage and state
                    await Storage.SetItemAsync("accessToken", result.AccessToken);
                    await Storage.SetItemAsync("refreshToken", result.RefreshToken);
                    await Storage.SetItemAsync("username", result.Username);

                    var customStateProvider = (ApiAuthenticationStateProvider)AuthProvider;
                    customStateProvider.NotifyUserAuthentication(result.Username);

                    Nav.NavigateTo("/");
                }
            }
            else
            {
                // Try to parse error message from API if available
                errorMessage = await response.Content.ReadAsStringAsync() ?? "Registration failed. Please check your details.";
            }
        }
        catch (Exception)
        {
            errorMessage = "A server error occurred. Please try again later.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class RegisterRequest
    {
        [Required]
        [StringLength(50, MinimumLength = 3)]
        public string Username { get; set; } = string.Empty;

        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters.")]
        public string Password { get; set; } = string.Empty;

        [Compare("Password", ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    // Reusing your TokenResponse structure
    public class TokenResponse
    {
        public string AccessToken { get; set; } = string.Empty;
        public string RefreshToken { get; set; } = string.Empty;
        public string Username { get; set; } = string.Empty;
    }
}