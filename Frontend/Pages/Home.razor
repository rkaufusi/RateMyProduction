@page "/"
@using System.Net.Http.Json
@using System.Text.Json.Serialization
@inject HttpClient Http

<PageTitle>Rate My Production | Search</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-5">
        <img src="logo.png" alt="Rate My Production Logo" style="max-width: 300px; height: auto;" />
        <p class="lead">Check the "vibe" before you sign the contract.</p>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="input-group input-group-lg shadow-sm">
                <input type="text" class="form-control"
                       placeholder="Search by Show, Movie, or Studio..."
                       @bind="searchQuery"
                       @onkeyup="HandleKeyUp" />
                <button class="btn btn-primary" @onclick="SearchProductions" disabled="@isSearching">
                    @if (isSearching)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    }
                    else
                    {
                        <i class="bi bi-search"></i>
                    }
                    Search
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        @if (isSearching)
        {
            <div class="col-12 text-center p-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-3 text-muted">Fetching latest industry data...</p>
            </div>
        }
        else if (productions == null)
        {
            <div class="col-12 text-center p-5">
                <p class="text-muted">Enter a production name to see the collective feedback.</p>
            </div>
        }
        else if (productions.Count == 0)
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    No productions found matching "<strong>@searchQuery</strong>".
                </div>
            </div>
        }
        else
        {
            @foreach (var prod in productions)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 transition-hover">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@prod.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@prod.Studio</h6>
                            <div class="d-flex align-items-center mt-3">
                                <span class="badge bg-warning text-dark me-2">
                                    ⭐ @(prod.AverageRating?.ToString("0.0") ?? "0.0")
                                </span>
                                <small class="text-muted">(@prod.ReviewCount reviews)</small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pb-3">
                            <a href="/production/@GenerateSlug(prod.Name)" class="btn btn-outline-primary btn-sm w-100">
                                View Production
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private string searchQuery = "";
    private List<ProductionSummary>? productions;
    private bool isSearching = false;

    public class ProductionSummary
    {
        [JsonPropertyName("productionID")]
        public int Id { get; set; }

        [JsonPropertyName("title")]
        public string Name { get; set; } = "";

        [JsonPropertyName("studio")]
        public string? Studio { get; set; } = "";

        [JsonPropertyName("averageRating")]
        public decimal? AverageRating { get; set; }

        [JsonPropertyName("reviewCount")]
        public int ReviewCount { get; set; }
    }
    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchProductions();
        }
    }

    private async Task SearchProductions()
    {
        if (string.IsNullOrWhiteSpace(searchQuery)) return;

        isSearching = true;
        try
        {
            var allData = await Http.GetFromJsonAsync<List<ProductionSummary>>("api/productions");

            Console.WriteLine($"Raw count from API: {allData?.Count}");
            if (allData != null && allData.Any())
            {
                Console.WriteLine($"First item Name: '{allData[0].Name}'");
            }

            if (allData != null)
            {
                productions = allData
                    .Where(p => p.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                                (p.Studio?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false))
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Search failed: {ex.Message}");
            productions = new List<ProductionSummary>();
        }
        finally
        {
            isSearching = false;
        }
    }
    private string GenerateSlug(string phrase)
    {
        if (string.IsNullOrEmpty(phrase)) return "";

        return phrase.ToLower()
                     .Replace(" ", "-")
                     .Replace("'", "")
                     .Trim();
    }
}